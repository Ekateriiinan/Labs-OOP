#include <vector>

std::vector<int> ToBinaryArray(unsigned int number) {
    constexpr int kIntBitSize = 32;
    std::vector<int> result;
    result.reserve(kIntBitSize);
    
    for (int i = kIntBitSize - 1; i >= 0; --i) {
        result.push_back((number >> i) & 1);
    }
    
    return result;
}
